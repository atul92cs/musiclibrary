<div class="main-body">
  <div class="container text-center">
    <div class="col-md-12 com-sm-12 col-xs-12 ">
    <div class="card">
      <div class="card-header">
        <h2 >Add Band</h2>
      </div>
      <div class="card-body">


      <form  action="/band/create" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <input type="text" name="name" id="name" #Name class="form-control">
        </div>
        <div class="form-group">
          <label for="Image">Image</label>
         <input type="file" class="form-control" #image name="image" id="Image">
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Create band</button>
        </div>
      </form>
     </div>
    </div>
  </div>
  </div>
</div>
<div class="table-section">
  <div class="container-fluid">
  <table class="table">
    <thead>
      <th scope="col text-center">Id</th>
      <th scope="col text-center">BandName</th>
      <th scope="col text-center">Image</th>
      <th scope="col text-center" >Action</th>
    </thead>
    <tbody>
        {{#each bands}}
      <tr>
      <td>{{this.id}}</td>
      <td>{{this.Name}}</td>
      <td><img src="{{this.Image}}"  alt="image"></td>
      <td><button class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</button> &nbsp; <button class="btn btn-danger"><i class="fas fa-times "></i></button></td>
      </tr>
        {{/each}}
    </tbody>
  </table>
  </div>
</div>
