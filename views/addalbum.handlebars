<div class="main-body">
<div class="container-fluid">
<div class="row">
  <div class="col-md-4 col-xs-12 col-sm-12">
    <div class="card">
      <div class="card-header">
        <h5>Add album</h5>
      </div>
      <div class="card-body">
      <form  action="/band/createalbum" method="post">
        <div class="form-group">
        <select class="form-control" #bandid name="bandid">
          <option value="0">--Select--</option>
          {{#each bands}}
          <option value="{{this.id}}">{{this.Name}}</option>
          {{/each}}
        </select>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="name" placeholder="Album name" value="">
        </div>
        <div class="form-group text-center">
          <button type="sumbit" class="btn btn-primary" name="button">Add album</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  <div class="col-md-8 col-xs-12 col-sm-12">
   <table class="table">
     <thead>
       <th scope="col">id</th>
       <th scope="col">Band name</th>
       <th scope="col">Album name</th>
       <th scope="col">Action</th>
     </thead>
     <tbody>
       {{#each albums}}
       <tr>
         <td>{{this.id}}</td>
         <td>{{this.BandName}}</td>
         <td>{{this.AlbumName}}</td>
         <td><button class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</button> &nbsp; <button class="btn btn-danger" onclick="deleteAlbum({{this.id}})"><i class="fas fa-times "></i></button></td>
       </tr>
       {{/each}}
     </tbody>
   </table>
  </div>
</div>
</div>
</div>
